scsi0:2.redo = ""
serial0.fileName = "thinprint"
serial0.fileType = "thinprint"
softPowerOff = "TRUE"
sound.autoDetect = "TRUE"
sound.fileName = "-1"
sound.pciSlotNumber = "-1"
svga.guestBackedPrimaryAware = "TRUE"
svga.vramSize = "268435456"
